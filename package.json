{
  "name": "rolling-with-alexa",
  "version": "1.0.0",
  "main": ".build/index.js",
  "description": "An Alexa Skill for the Rolling Scopes events",
  "author": "Ricardo Casares <ricardocasares@gmail.com> (http://analogic.al/)",
  "license": "MIT",
  "scripts": {
    "dev": "run-s tsc watch",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "start": "micro",
    "micro:dev": "micro-dev",
    "build": "run-s test:coverage tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "watch": "run-p tsc:watch micro:dev"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "skipBabel": true,
        "tsConfigFile": "./tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "coverageDirectory": ".coverage"
  },
  "dependencies": {
    "ask-sdk-core": "^2.0.7",
    "ask-sdk-model": "^1.3.0",
    "graphql-request": "^1.6.0",
    "micro": "^9.3.1",
    "translitit-cyrillic-russian-to-latin": "^0.1.1",
    "tslib": "^1.9.3",
    "unique-random-array": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/micro": "^7.3.1",
    "@types/node": "^10.9.4",
    "jest": "^23.1.0",
    "micro-dev": "^3.0.0",
    "npm-run-all": "^4.1.3",
    "ts-jest": "^22.4.6",
    "typescript": "^2.8.3"
  }
}
